<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<HBox xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="gui.ViewController">
    <children>
        <VBox spacing="4.0" HBox.hgrow="SOMETIMES">
            <children>
                <HBox alignment="CENTER_LEFT">
                    <children>
                        <CheckBox fx:id="cbRead" alignment="CENTER" contentDisplay="GRAPHIC_ONLY"
                                  mnemonicParsing="false"/>
                        <Label id="nameLbl" fx:id="lblTitel" prefHeight="56.0" prefWidth="500.0" wrapText="true">
                            <font>
                                <Font name="System Bold" size="15.0"/>
                            </font>
                        </Label>
                    </children>
                </HBox>
                <GridPane VBox.vgrow="SOMETIMES">
                    <columnConstraints>
                        <ColumnConstraints maxWidth="259.0" minWidth="10.0" prefWidth="109.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="419.0" minWidth="10.0" prefWidth="419.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="200.0" valignment="TOP" vgrow="ALWAYS"/>
                    </rowConstraints>
                    <children>
                        <Label fx:id="lblAuthor" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1"/>
                        <Label fx:id="lblPublisher" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1"
                               GridPane.rowIndex="1"/>
                        <Label fx:id="lblContent" alignment="TOP_LEFT" maxHeight="1.7976931348623157E308"
                               maxWidth="1.7976931348623157E308" textAlignment="JUSTIFY" textOverrun="CLIP"
                               wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="2">
                            <padding>
                                <Insets top="5.0"/>
                            </padding>
                        </Label>
                        <Label text="Autor(en):"/>
                        <Label text="Verlag:" GridPane.rowIndex="1"/>
                        <Label text="Inhalt:" GridPane.rowIndex="2">
                            <padding>
                                <Insets top="5.0"/>
                            </padding>
                        </Label>
                    </children>
                </GridPane>
                <HBox alignment="BASELINE_LEFT" prefHeight="34.0" prefWidth="510.0">
                    <children>
                        <Label text="Besitzstatus: "/>
                        <ChoiceBox fx:id="cbOwnership" prefHeight="31.0" prefWidth="128.0"/>
                        <TextField fx:id="tfAn" onAction="#onLend"/>
                        <Button mnemonicParsing="false" text="Update"/>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets left="10.0" top="8.0"/>
            </padding>
        </VBox>
        <VBox spacing="5.0">
            <children>
                <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                        text="Edit"/>
                <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                        text="Create Task"/>
                <Button onAction="#onDelete" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Delete"/>
            </children>
        </VBox>
    </children>
</HBox>
